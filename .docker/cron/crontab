SHELL=/bin/sh
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
# Laravel Scheduler
* * * * * cd /var/www/ && php artisan schedule:run >> /home/LogFiles/cron.log 2>&1
0 0 * * 0 apt-get autoremove && apt-get autoclean >> /home/LogFiles/cron.log 2>&1
30 0 * * * /usr/bin/composer self-update >> /home/LogFiles/cron.log 2>&1
#
